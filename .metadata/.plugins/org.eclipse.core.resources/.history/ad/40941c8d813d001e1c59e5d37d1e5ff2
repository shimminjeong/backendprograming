<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.BoardDAO">
	<resultMap type="mybatis.BoardVO" id="boardMap">
		<result column="title" property="title"/>
		<result column="writer" property="writer"/>
		<result column="no" property="no"/>
		<result column="reg_date" property="regdate"/>
		<result column="count" property="count"/>
		<result column="content" property="content"/>
		<!-- <result column=db이름 property=vo이름> -->
	</resultMap>

	<select id="selectAll" resultType="boardVO">
		select * from t_board
		order by
		no
	</select>

	<select id="selectbyName2" parameterType="boardVO" resultType="boardVO">
		select * from t_board
		where writer=#{name}
	</select>
	
	<select id="selectbyName" parameterType="String" resultType="boardVO">
		select no, title, writer, content, reg_date as regDate, count from t_board
		where writer=#{writer}
	</select>
	
	<select id="selectbyNo" parameterType="int" resultType="boardVO">
		select * from t_board
		where NO=#{no}
	</select>

	<insert id="insertNewPost">
		insert into t_board(no, title, writer,content)
		values(seq_t_board.nextval,'오늘의 날씨', '심민정','안녕하슈')
	</insert>

	<insert id="insertNewPost2" parameterType="boardVO">
		insert into
		t_board(no, title, writer,content)
		values(seq_t_board.nextval,#{title},#{writer},#{content})
	</insert>




</mapper>